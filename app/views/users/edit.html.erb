<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= render 'books/error', obj: @user %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label>Name</label><br>
          <%= f.text_field :name, class: "form-control name" %><br>
        </div>
          
        <label>Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file user_image" %><br>
        <label>introduction</label><br>
        <%= f.text_area :introduction, class: "form-control introduction" %><br>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>

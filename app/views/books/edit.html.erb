<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= render 'error', obj: @book %>
      <%= form_with model: @book do |f| %>
        <label>Title</label><br>
        <%= f.text_field :title, class: "form-control book_title" %><br>
        <label>Opinion</label><br>
        <%= f.text_area :body, class: "form-control book_body" %><br>
        <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back", books_path %>
    </div>
  </div>
</div>

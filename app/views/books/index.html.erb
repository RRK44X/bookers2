<div class="container px-5">
  <%= render 'error', obj: @new_book %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @new_book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hovertable-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user.id) do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
              <td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
              <td><%= book.body %></td>
              <%= render 'favorite', book: book %>
              <td>コメント数:<%= book.book_comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
